<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Sign_in">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:hint="Enter Your E-mail"
        android:backgroundTint="#0928ED"
        android:id="@+id/Signinemailid"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:hint="Enter Your Password"
        android:backgroundTint="#0928ED"
        android:id="@+id/Signinpasswordid"/>

    <Button
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Sign In"
        android:background="@drawable/button_style"
        android:id="@+id/signInid"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/signuptextviewid"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#090DFF"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text="Are You Not Registration?Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:visibility="invisible"
        android:layout_gravity="center"
        android:id="@+id/signipprogrssbarid"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>